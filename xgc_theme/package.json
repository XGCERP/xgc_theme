{
  "name": "xgc_theme",
  "version": "0.0.1",
  "description": "OneUI-based theme for Frappe/ERPNext",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:property": "jest tests/property",
    "test:watch": "jest --watch",
    "visual:reference": "backstopjs reference --config=backstop.config.js",
    "visual:test": "backstopjs test --config=backstop.config.js",
    "visual:approve": "backstopjs approve --config=backstop.config.js",
    "visual:report": "backstopjs openReport --config=backstop.config.js"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^30.2.0",
    "backstopjs": "^6.3.25",
    "fast-check": "^4.5.3",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^28.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "public/**/*.js",
      "!public/**/node_modules/**"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/OneUI/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jsdom|@exodus/bytes|whatwg-encoding|html-encoding-sniffer|whatwg-url|tr46|webidl-conversions|saxes|w3c-xmlserializer)/)"
    ]
  }
}
